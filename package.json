{
  "name": "@alissonfpmorais/rastru",
  "version": "1.0.0",
  "description": "A tiny library for tracing spans in nestjs apps",
  "author": "Alisson Morais",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alissonfpmorais/rastru"
  },
  "keywords": [
    "nest",
    "nestjs",
    "lib",
    "library",
    "trace",
    "tracing",
    "span",
    "debug"
  ],
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:prod": "npm run build -- --project ./tsconfig.build.json",
    "build": "rimraf dist && tsc",
    "lint": "eslint src/",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier . --write",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "@nestjs/common": "^9.4.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@types/node": "^20.12.11",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.1.0",
    "husky": ">=7",
    "lint-staged": ">=10",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.--write": "prettier --write"
  }
}
